#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

. .builder

npm install

mkdir -p target/

echo -e "\nsource/pub.favicon/favicon.ico -> target/pub/favicon.ico"
cp source/pub.favicon/favicon.ico target/pub/favicon.ico

for dir in source/*.*/; do
  
  dir="${dir%/}"
  
  dir2="${dir#source/}"
  dir2="${dir2%.*}"
  dir2="${dir2//.//}"
  
  name="${dir##*.}"

  build_js "$dir/$name.js" "target/$dir2/$name.js"
done

echo -e "\nDone"
